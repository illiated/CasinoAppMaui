<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CasinoAppMaui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                FontSize="32"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                Text="Guess a number from 1 to 6" />
            <Entry
                x:Name="GuessEntry"
                FontAttributes="Bold"
                FontSize="20"
                Placeholder="Enter number"
                PlaceholderColor="LightGrey"
                TextColor="DarkSlateGray" />
            <Button
                x:Name="SubmitBtn"
                HorizontalOptions="Center"
                SemanticProperties.Hint="Checks if the guess inside the entry is correct"
                Text="Submit" />
            <Button
                x:Name="ResetBtn"
                HorizontalOptions="Center"
                IsVisible="False"
                SemanticProperties.Hint="Resets the number guesser"
                Text="RESET" />
            <Label
                x:Name="ResultLabel"
                FontSize="20"
                IsVisible="False" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
